<!DOCTYPE html>
<html>
<head>
    <title>Anomaly charts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Anomaly charts</h1>

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <div class="container-fluid">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCategories" aria-controls="navbarCategories" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCategories">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            {% for categoryid, category_name in categories.items() %}
            <li class="nav-item">
                <a class="nav-link {% if selected_category == categoryid %}fw-bold text-primary active{% endif %}" href="/charts?categoryid={{ categoryid }}">{{ category_name }}</a>
            </li>
            {% endfor %}
            </ul>
            </div>
            </div>
        </nav>

        <ul class="nav nav-tabs" id="tablist0" role="tablist">
            {% for chart_groupid in chart_groups %}
                <li class="nav-item" role="presentation">
                    <button class="nav-link {{ chart_groups[chart_groupid].link_active }}" id="{{ chart_groupid }}-tab" data-bs-toggle="tab" data-bs-target="#{{ chart_groupid }}" type="button" role="tab" aria-controls="{{ chart_groupid }}" aria-selected="{{ chart_groups[chart_groupid].selected }}">{{ chart_groups[chart_groupid].group_name }}</button>
                </li>
            {% endfor %}
        </ul>
        <div class="tab-content mt-4" id="tabContent0">
            {% for chart_groupid in chart_groups %}
                <div class="tab-pane fade {{ chart_groups[chart_groupid].active }}" id="{{ chart_groupid }}" role="tabpanel" aria-labelledby="{{ chart_groupid }}-tab">
                    {{ chart_groups[chart_groupid].charts_html }}
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>